        <org.wso2.carbon.core.version>5.0.0</org.wso2.carbon.core.version>
        <org.wso2.carbon.core.version.range>[5.0.0, 6.0.0)</org.wso2.carbon.core.version.range>
        <carbon.analytics.common.version>5.0.10</carbon.analytics.common.version>
        <carbon.analytics.common.version.range>[5.0.0, 6.0.0)</carbon.analytics.common.version.range>

        <gson.version>2.5</gson.version>
        <gson.version.range>[2.0.0, 3.0.0)</gson.version.range>
        <slf4j.version>1.7.19</slf4j.version>
        <slf4j.version.range>[1.7.0,1.8.0)</slf4j.version.range>
        <log4j.version>1.2.17</log4j.version>

        <org.snakeyaml.version>1.16.0.wso2v1</org.snakeyaml.version>
        <org.snakeyaml.version.range>[1.16.0, 2.0.0)</org.snakeyaml.version.range>


        <h2.version>1.4.185</h2.version>
        <spring.version>4.2.5.RELEASE</spring.version>
        <mockito.version>1.10.19</mockito.version>

        <javax.ws.rs.version>2.0.1</javax.ws.rs.version>

        <tomcat.version>8.0.30</tomcat.version>

        <jacoco.version>0.7.6.201602180812</jacoco.version>

        <carbon.feature.plugin.version>2.0.0</carbon.feature.plugin.version>
    </properties>
</project>
