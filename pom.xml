        <carbon.metrics.version>2.0.0-SNAPSHOT</carbon.metrics.version>
        <testng.version>6.9.11</testng.version>
        <metrics.version>3.1.2</metrics.version>
        <metrics.version.range>[3.1.0, 4.0.0)</metrics.version.range>
        <equinox.osgi.version>3.10.101.v20150820-1432</equinox.osgi.version>
        <equinox.osgi.services.version>3.5.0.v20150519-2006</equinox.osgi.services.version>
        <org.wso2.carbon.core.version>5.0.0</org.wso2.carbon.core.version>
        <org.wso2.carbon.core.version.range>[5.0.0, 6.0.0)</org.wso2.carbon.core.version.range>
        <carbon.analytics.common.version>5.0.11</carbon.analytics.common.version>
        <carbon.analytics.common.version.range>[5.0.0, 6.0.0)</carbon.analytics.common.version.range>
        <xerces.impl.version>2.11.0.SP4</xerces.impl.version>
        <slf4j.version>1.7.21</slf4j.version>
        <slf4j.version.range>[1.7.0,1.8.0)</slf4j.version.range>
        <log4j.version>2.5</log4j.version>
        <org.snakeyaml.version>1.16.0.wso2v1</org.snakeyaml.version>
        <org.snakeyaml.version.range>[1.16.0, 2.0.0)</org.snakeyaml.version.range>
        <hikaricp.version>2.4.5</hikaricp.version>
        <h2.version>1.4.191</h2.version>
        <spring.version>4.2.5.RELEASE</spring.version>
        <mockito.version>1.10.19</mockito.version>
        <tomcat.version>8.0.33</tomcat.version>
